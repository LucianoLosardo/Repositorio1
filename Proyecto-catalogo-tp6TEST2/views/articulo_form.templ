package views

templ ArticuloForm() {
    <form 
        hx-post="/articulos"
		hx-target="#tablaArticulos"
		hx-swap="outerHTML"
		hx-on::after-request="
    		alert('Articulo creado exitosamente');
    		this.reset();
            document.querySelector('#tablaArticulos').scrollIntoView({ behavior: 'smooth' });
		"
        class="formulario" 
        id="formArticulo">
        <h2>Agregar nuevo art√≠culo</h2>
        <div class="formElement">
            <label>Titulo:</label>
            <input type="text" name="titulo" />
        </div>

        <div class="formElement">
            <label>Descripcion:</label>
            <input type="text" name="descripcion" />
        </div>

        <div class="formElement">
            <label>Imagen:</label>
            <input type="url" name="imagen" placeholder="https://ejemplo.com/imagen.jpg" />
        </div>
        <button type="submit">Enviar</button>
     </form>
} 